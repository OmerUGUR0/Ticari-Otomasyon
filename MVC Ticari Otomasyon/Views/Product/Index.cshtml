@using MVC_Ticari_Otomasyon.Models.Classes
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Ürün Listesi</h2>
<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ürün</th>
            <th>Marka</th>
            <th>Stok</th>
            <th>Alış Fiyat</th>
            <th>Satış Fiyat</th>
            <th>Kategori</th>
            <th style="width: 100px">Görsel</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    @foreach (var u in Model)
    {
        <tr>
            <td>@u.ProductID</td>
            <td>@u.ProductName</td>
            <td>@u.Brand</td>
            <td>@u.Stock</td>
            <td>@u.PurchasePrice</td>
            <td>@u.SalePrice</td>
            <td>@u.Category.CategoryAd</td>
            <td>@u.ProductImage</td>
            <td><a href="/Product/ProductDelete/@u.ProductID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Product/ProductBring/@u.ProductID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Product/ProductAdd/" class="btn btn-info">Yeni Ürün</a>


@*Datatables Eklenti*@
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({});
</script>

