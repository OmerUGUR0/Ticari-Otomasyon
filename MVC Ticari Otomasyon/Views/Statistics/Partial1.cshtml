@model IEnumerable<MVC_Ticari_Otomasyon.Models.Classes.ClassGroup2>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Departman Personel Sayıları</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Departman</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Sayı</th>
                </tr>
            </thead>
            <tbody>
                @{int sayı = 0;}
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@{sayı++;} @sayı</td>
                        <td>@x.Current</td>
                        <td>
                            <div class="progress progress-xs">
                                <div class="progress-bar progress-bar-danger" style="width: @x.Total"></div>
                            </div>
                        </td>
                        <td><span class="badge bg-danger">@x.Total</span></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>