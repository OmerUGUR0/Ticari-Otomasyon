@using MVC_Ticari_Otomasyon.Models.Classes
@model List<Personnel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Personeller</h2>
<br />
<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Personel Adı</th>
            <th>Soyad</th>
            <th>Görsel</th>
            <th>Departman</th>
            <th>Güncelle</th>
            <th>Satışlar</th>
        </tr>
    </thead>

    @foreach (var k in Model)
    {
        <tr>
            <td><a>@k.PersonnelID</a></td>
            <td><a>@k.PersonnelName</a></td>
            <td><a>@k.PersonnelSurName</a></td>
            <td><a>@k.PersonnelImage</a></td>
            <td><a>@k.Department.DepartmentName</a></td>
            <td><a href="/Personnel/PersonnelBring/@k.PersonnelID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Department/DepartmentPersonnelSales/@k.PersonnelID" class="btn btn-success" style="background-color:fuchsia"> Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Personnel/PersonnelAdd/" class="btn btn-info">Personel Ekle</a>


@*Datatables Eklenti*@
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({});
</script>

