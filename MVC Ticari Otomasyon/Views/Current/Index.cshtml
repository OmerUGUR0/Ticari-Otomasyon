@using MVC_Ticari_Otomasyon.Models.Classes
@model List<Current>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Cariler</h2>
<table id="tbl1" class="table table-hover">
    <thead>
        <tr>
            <th>CARI ID</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Şehir</th>
            <th>Mail</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    @foreach (var x in Model)
    {
        <tr>
            <th>@x.CurrentID</th>
            <th>@x.CurrentName</th>
            <th>@x.CurrentSurName</th>
            <th>@x.CurrentCity</th>
            <th>@x.CurrentMail</th>
            <th><a href="/Current/CurrentDelete/@x.CurrentID" class="btn btn-danger">Sil</a></th>
            <th><a href="/Current/CurrentBring/@x.CurrentID" class="btn btn-success">Güncelle</a></th>
            <th><a href="/Current/CustomerSales/@x.CurrentID" class="btn btn-outline-secondary">Satış Geçmişi</a></th>
        </tr>
    }
</table>
<a href="/Current/CurrentAdd" class="btn btn-success">Yeni Cari Ekle</a>

