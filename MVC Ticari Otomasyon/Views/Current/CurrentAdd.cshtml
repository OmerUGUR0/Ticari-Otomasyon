@model MVC_Ticari_Otomasyon.Models.Classes.Current
@{
    ViewBag.Title = "CurrentAdd";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>CurrentAdd</h2>
<form class="form-group" method="post">
    @Html.Label("Cari İsmi :")
    @Html.TextBoxFor(x => x.CurrentName, new { @class = "form-control" })
    <br />
    @Html.Label("Cari Soy İsmi :")
    @Html.TextBoxFor(x => x.CurrentSurName, new { @class = "form-control" })
    <br />
    @Html.Label("Cari Şehir İsmi :")
    @Html.TextBoxFor(x => x.CurrentCity, new { @class = "form-control" })
    <br />
    @Html.Label("Cari Mail:")
    @Html.TextBoxFor(x => x.CurrentMail, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>

