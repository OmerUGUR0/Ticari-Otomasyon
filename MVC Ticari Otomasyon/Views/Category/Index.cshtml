@using MVC_Ticari_Otomasyon.Models.Classes
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var k in Model)
    {
    <tr>
        <td><a>@k.CategoryID</a></td>
        <td><a>@k.CategoryAd</a></td>
        <td><a href="/Category/CategoryDelete/@k.CategoryID"class="btn btn-danger">Sil</a></td>
        <td><a href="/Category/CategoryBring/@k.CategoryID" class="btn btn-success">Güncelle</a></td>
    </tr>
    }
</table>
<a href="/Category/CategoryAdd" class="btn btn-primary">Yeni Kategori Ekle</a>

